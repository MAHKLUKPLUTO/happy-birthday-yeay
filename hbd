  <script>
    function openEnvelope() {
      const envelope = document.getElementById("envelope");
      const audio = document.getElementById("clickSound");

      audio.play();
      envelope.classList.add("fade-out");

      setTimeout(() => {
        window.location.href = "DOA.html";
      }, 1000);
    }
  </script>

